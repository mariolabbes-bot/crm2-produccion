{
  "version": 2,
  "env": {
    "REACT_APP_API_URL": "https://crm2-backend.onrender.com/api"
  },
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "https://crm2-backend.onrender.com/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
